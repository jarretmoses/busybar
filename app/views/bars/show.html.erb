<div class="container">
  <div id="info" class='col-md-12'>
    <h1 style="text-align:center"><%= @bar.name %></h1>
    <h3 id="address" style="text-align:center"><%= @bar.address %></h3>
  </div>  
</div>




<div class="container">
  <div id="map" class="col-md-6">
    <div id="map_canvas"></div>
  </div>
    <div class='col-md-6'>
      <table class ="table table-striped table-hover">
        <tr>
          <th>Check Ins</th>  
          <td><%= @bar.checkinsCount %></td>
        </tr>
        <tr>
          <th>Unique User Checkins</th>
          <td><%= @bar.usersCount %></td>
        </tr>
        <tr>
          <th>Here Now</th>
          <td><%= @bar.here_now %></td>
        </tr>
        <% if @bar.url %>
        <tr>
          <th>Website</th>
          <td><a href=<%= @bar.url %> target="_blank"><%= @bar.url %></a></td>
        </tr>
        <% end %>
      </table>
    </div> 
</div>

<div class="container">
  <div class='col-md-12'>
    <div id="photo-box">
      <% @photos.each do |photo| %>
        <a class="fancybox" rel="group" href=<%= photo[:large] %>><img src= <%= photo[:small] %> alt=""></a>
      <% end %>
    </div> 
  </div>  
</div>

<!-- Initialize fancy box after page laod -->
<script type="text/javascript">
  $(function(){
    $(".fancybox").fancybox();
  });
  var gmap = new GMap();
  gmap.codeAddress(gmap.address);
</script>





   

