<div class="jumbotron">
  <div id="alert">
 <% if flash[:notice] %>
    <div class="alert alert-warning"><%= flash[:notice] %></div>
 <% end %>
 </div>

    <h1>BUSY BAR</h1>
      <%= form_tag('/results',method: 'get') %>
    <div id='input'>
      <%= collection_select(Category, :bar, Category.all.sort_by{|bar| bar.name}, :name, :name,:include_blank => "Please select bar type")%>
      <%= collection_select(Location, :near, Location.all.sort_by{|loc| loc.near}, :near, :near, :include_blank => "Please select a location") %>
    </div>
      <%= submit_tag 'Find Bars!' %>
</div>


